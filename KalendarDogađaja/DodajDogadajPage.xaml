<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KalendarDogađaja.DodajDogadajPage"
             Title="Dodaj Događaj">
    <StackLayout Padding="20">
        <Label Text="Naziv događaja:" />
        <Entry x:Name="NazivEntry" Placeholder="Unesi naziv" />

        <Label Text="Opis događaja:" />
        <Editor x:Name="OpisEditor" Placeholder="Unesi opis" HeightRequest="100"/>

        <Label Text="Datum događaja:" />
        <DatePicker x:Name="DatumPicker" />

        <Button Text="Spremi" Clicked="OnSpremiClicked"/>
    </StackLayout>
</ContentPage>