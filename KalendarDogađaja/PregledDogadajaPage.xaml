<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KalendarDogađaja.PregledDogadajaPage"
             Title="Pregled Događaja">
    <StackLayout Padding="20" BackgroundColor="#38A3A5">
        <Entry x:Name="NazivEntry" Placeholder="Naziv događaja" />
        <Editor x:Name="OpisEditor" Placeholder="Opis" HeightRequest="100"/>
        <DatePicker x:Name="DatumPicker" />
        <Button Text="Spremi promjene" 
                Clicked="OnSpremiClicked"
                BackgroundColor="#3C9D9B"
                TextColor="White"/>
        <Button Text="Izbriši događaj" 
                Clicked="OnIzbrisiClicked"
                BackgroundColor="#57CC99"
                TextColor="White"/>
    </StackLayout>
</ContentPage>